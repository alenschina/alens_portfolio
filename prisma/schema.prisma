generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(ADMIN)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Navigation {
  id          String       @id @default(cuid())
  title       String
  slug        String       @unique
  type        NavType      @default(LINK)
  parentId    String?
  categoryId  String?
  externalUrl String?
  order       Int          @default(0)
  isVisible   Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  category    Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  parent      Navigation?  @relation("NavigationHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Navigation[] @relation("NavigationHierarchy")
}

model Category {
  id          String          @id @default(cuid())
  name        String
  slug        String          @unique
  description String?
  coverImage  String?
  order       Int             @default(0)
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  images      CategoryImage[]
  navigation  Navigation[]
}

model Image {
  id           String          @id @default(cuid())
  title        String?
  alt          String
  description  String?
  originalUrl  String
  thumbnailUrl String?
  width        Int?
  height       Int?
  size         Int?
  mimeType     String?
  order        Int             @default(0)
  isVisible    Boolean         @default(true)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  categories   CategoryImage[]

  @@index([isVisible])
}

model CategoryImage {
  id            String   @id @default(cuid())
  imageId       String
  categoryId    String
  isCarousel    Boolean  @default(false)
  carouselOrder Int?
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  category      Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  image         Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([imageId, categoryId])
  @@index([categoryId])
  @@index([imageId])
  @@index([isCarousel])
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

enum NavType {
  LINK
  CATEGORY
  PARENT
  EXTERNAL
}
